@model SalesSystem.Areas.Admin.Models.Customer

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm(actionName: "Edit",controllerName: "Customer", method: FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
